generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum WickType {
  COTTON
  WOOD
}

enum OrderStatus {
  PENDING
  PAID
  FULFILLED
  CANCELLED
}

model Product {
  id          String   @id @default(cuid())
  name        String
  slug        String   @unique
  description String?
  active      Boolean  @default(true)
  featured    Boolean  @default(false)
  variants    Variant[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Variant {
  id         String   @id @default(cuid())
  productId  String
  product    Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  vessel     String
  sizeOz     Float
  wickType   WickType
  priceCents Int
  sku        String?  @unique
  active     Boolean  @default(true)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  @@index([productId])
}

model Order {
  id            String      @id @default(cuid())
  status        OrderStatus @default(PENDING)
  email         String
  name          String
  address1      String
  address2      String?
  city          String
  state         String
  postalCode    String
  country       String @default("US")
  subtotalCents Int
  shippingCents Int
  totalCents    Int
  items         OrderItem[]
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model OrderItem {
  id             String   @id @default(cuid())
  orderId        String
  order          Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  productName    String
  variantLabel   String
  quantity       Int
  unitPriceCents Int
  lineTotalCents Int
  createdAt      DateTime @default(now())
}

model Setting {
  key   String @id
  value String
}
